@model DoAn3.Models.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Tạo bài viết mới</h3>

<div ng-controller="Create">
    <form ng-submit="addData()" name="form">
        <div class="form-horizontal">
            
            <div class="form-group">
                <div class="col-md-10">
                    <h6>Tiêu đề</h6>

                    <input type="text" class="form-control" ng-model="news.Title" name="name" required />
                    <p class="text-danger text-xs italic" ng-show="form.name.$touched && form.name.$invalid">Vui lòng điền đủ thông tin.</p>
                </div>
            </div>

            <div class="form-group">
                
                <div class="col-md-10">
                    <h6>
                        Nội dung
                    </h6>
                    <textarea type="text" ck-editor="" ng-model="news.Content" id="MoTa" name="des" required />  </textarea>
                    <p class="text-danger text-xs italic" ng-show="form.des.$touched && form.des.$invalid">Vui lòng điền đủ thông tin.</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <h6>Ảnh mô tả</h6>

                    <div class="input-group mb-3">

                        <input type="text" class="form-control" placeholder="Image link" ng-model="news.Banner" id="Banner" name="image" required>
                        <div class="input-group-append">
                            <span class="input-group-text" onclick="UpLoad('Banner')">Chọn ảnh</span>
                        </div>
                        <p class="text-danger text-xs italic" ng-show="form.image.$touched && form.image.$invalid">Vui lòng điền đủ thông tin.</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                
                <div class="col-md-10">
                    <h6>
                        Loại game
                    </h6>
                    <select ng-model="news.MaLoai" class="custom-select" name="lg" ng-options="x.MaLoai as x.TenLoai for x in lgs" required>
                        <option value="">-- Chọn loại game --</option>
                    </select>
                    <p class="text-danger text-xs italic" ng-show="form.lg.$touched && form.lg.$invalid">Vui lòng điền đủ thông tin.</p>
                </div>
            </div>

            <div class="form-group">
                
                <div class="col-md-10">
                    <h6>
                        Tài khoản đăng
                    </h6>
                    <select ng-model="news.UserID" class="custom-select" ng-options="x.UserID as x.UserName for x in users" name="acc" required>
                        <option value="">-- Chọn tài khoản đăng --</option>
                    </select>
                    <p class="text-danger text-xs italic" ng-show="form.acc.$touched && form.acc.$invalid">Vui lòng điền đủ thông tin.</p>
                </div>
            </div>

            <div class="d-flex">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a href="/Admin/News/Index" class="btn btn-danger ml-2">Quay lại</a>
            </div>
            
        </div>
        

        
        </form>
    </div>
@section scripts{
   
    <script src="~/Areas/Admin/Contents/js/AngularJsAdmin/News.js"></script>
    }
