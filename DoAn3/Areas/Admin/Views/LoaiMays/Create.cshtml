@model DoAn3.Models.LoaiMay

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 >Thêm loại máy</h3>


<div ng-controller="Create">
    <form ng-submit="addData()" name="form">
        <div class="form-horizontal">
            
            <div class="form-group">
                <div class="col-md-10">
                    <h6>Tên máy</h6>

                    <input type="text" class="form-control" ng-model="loaiMay.TenMay" name="name" required />
                    <p class="text-danger text-xs italic" ng-show="form.name.$touched && form.name.$invalid">Vui lòng điền đủ thông tin.</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <h6>Mô tả</h6>

                    <input type="text" class="form-control" ng-model="loaiMay.MoTa" name="des" required />
                    <p class="text-danger text-xs italic" ng-show="form.des.$touched && form.des.$invalid">Vui lòng điền đủ thông tin.</p>
                </div>
            </div>

            <div class="d-flex">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-success" />
                    </div>
                </div>
                <div>
                    <a class="btn btn-danger" href="/Admin/LoaiMays/Index">
                        Quay lại
                    </a>
                </div>
            </div>
        </div>


        
    </form>
</div>


@section scripts{
    <script src="~/Areas/Admin/Contents/js/AngularJsAdmin/LoaiMay.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.8.3/angular.min.js" integrity="sha512-KZmyTq3PLx9EZl0RHShHQuXtrvdJ+m35tuOiwlcZfs/rE7NZv29ygNA8SFCkMXTnYZQK2OX0Gm2qKGfvWEtRXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    

}